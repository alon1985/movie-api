{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Movie-API",
    "contact": {
      "name": "Alon Motro"
    }
  },
  "basePath": "/movies",
  "schemes": [
    "http"
  ],
  "paths": {
    "/{movieId}": {
      "get": {
        "tags": [
          "Movies"
        ],
        "summary": "retrieves movie information by id",
        "parameters": [
          {
            "name": "movieId",
            "description": "id of movie requested",
            "type": "int",
            "required": true,
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "movie data in json format"
          },
          "500": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/search": {
      "get": {
        "tags": [
          "Movies"
        ],
        "summary": "retrieves movie information by searching any combination of title, year, name",
        "parameters": [
          {
            "name": "title",
            "description": "title of movie (or any part of title)",
            "type": "string",
            "required": false,
            "in": "query"
          },
          {
            "name": "year",
            "description": "year movie was seen",
            "type": "string",
            "required": false,
            "in": "query"
          },
          {
            "name": "format",
            "description": "how the movie was seen",
            "type": "string",
            "required": false,
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "movie data in json format"
          },
          "500": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Error": {
      "type": "object",
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
