{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Movie-API",
    "contact": {
      "name": "Alon Motro"
    }
  },
  "basePath": "/movies",
  "schemes": [
    "http"
  ],
  "paths": {
    "/stats": {
      "get": {
        "tags": [
          "Movies"
        ],
        "summary": "retrieves user's movie stats",
        "parameters": [
          {
            "name": "uid",
            "description": "id of user",
            "type": "string",
            "required": true,
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "movie statistics in json format"
          },
          "500": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/add": {
      "post": {
        "tags": [
          "Movies"
        ],
        "summary": "add's a movie or viewing to a user's list",
        "parameters": [
          {
            "name": "uid",
            "description": "id of user",
            "type": "string",
            "required": true,
            "in": "query"
          },
          {
            "name": "title",
            "description": "title of movie",
            "type": "string",
            "required": true,
            "in": "body"
          },
          {
            "name": "format",
            "description": "format the movie was seen in",
            "type": "string",
            "required": true,
            "in": "body"
          },
          {
            "name": "date",
            "description": "date movie was seen",
            "type": "string",
            "required": true,
            "in": "body"
          }
        ],
        "responses": {
          "200": {
            "description": "success/failure"
          },
          "500": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/export": {
    "get": {
      "tags": [
        "Movies"
      ],
      "summary": "download csv of user's movies",
      "parameters": [
        {
          "name": "uid",
          "description": "id of user",
          "type": "string",
          "required": true,
          "in": "query"
        }
      ],
      "responses": {
        "200": {
          "description": "csv file"
        },
        "500": {
          "description": "unexpected error",
          "schema": {
            "$ref": "#/definitions/Error"
          }
        }
      }
    }
  },
    "/search": {
      "get": {
        "tags": [
          "Movies"
        ],
        "summary": "retrieves movie information by searching any combination of title, year, name",
        "parameters": [
          {
            "name": "title",
            "description": "title of movie (or any part of title)",
            "type": "string",
            "required": false,
            "in": "query"
          },
          {
            "name": "year",
            "description": "year movie was seen",
            "type": "string",
            "required": false,
            "in": "query"
          },
          {
            "name": "format",
            "description": "how the movie was seen",
            "type": "string",
            "required": false,
            "in": "query"
          },
          {
            "name": "uid",
            "description": "id of user",
            "type": "string",
            "required": true,
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "movie data in json format"
          },
          "500": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Error": {
      "type": "object",
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
