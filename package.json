{
  "name": "movie-api",
  "version": "0.0.1",
  "description": "movie API",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm rebuild",
    "test": "npm run unit-test",
    "unit-test": "mocha --recursive test/unit",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec",
    "unit-test-tc": "node ./node_modules/mocha/bin/_mocha --reporter mocha-teamcity-reporter test/unit --recursive",
    "cover-tc": "node ./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha --report html -- --recursive test/unit",
    "start": "node ./node_modules/pm2/bin/pm2 start --no-pmx process-config.json",
    "stop": "node ./node_modules/pm2/bin/pm2 stop process-config.json",
    "restart": "node ./node_modules/pm2/bin/pm2 restart process-config.json",
    "list": "node ./node_modules/pm2/bin/pm2 list",
    "kill": "node ./node_modules/pm2/bin/pm2 kill",
    "mocha-integration-tc": "mocha --reporter mocha-teamcity-reporter test/integration --recursive --timeout 15000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alon85/AlonFilm"
  },
  "author": "Alon Motro",
  "license": "none",
  "bugs": {
    "url": "https://github.com/alon85/AlonFilm/issues"
  },
  "homepage": "https://github.com/alon85/AlonFilm",
  "dependencies": {
    "bunyan": ">= 1.5",
    "bunyan-config": "^0.2.0",
    "config": "^1.17.1",
    "express": "^4.13.3",
    "lodash": "^3.10.1",
    "mysql": "^2.10.2",
    "pm2": "= 0.15.7",
    "request": "^2.67.0",
    "restify": ">= 4.0.3",
    "swagger-ui": "^2.1.3"
  },
  "devDependencies": {
    "chai": ">= 3.4",
    "fast-feed": "^1.5.2",
    "istanbul": "^0.4.0",
    "merge": "^1.2.0",
    "mocha": ">= 2.3",
    "mocha-teamcity-reporter": ">=0.0.4",
    "mockery": "^1.4.0",
    "sinon": "^1.17.2",
    "sinon-as-promised": "^4.0.0"
  }
}
